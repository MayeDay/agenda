<div class="header-navigation">
    <BsNavbar @backgroundColor="nav-bg" class="navigation-bar navbar-dark" as |navbar|>
        <div class="navbar-header">
            <navbar.toggle />
        <a class="navbar-brand logo" href="#"></a>
        </div>
    <navbar.content>
        <navbar.nav class="ml-auto" as |nav|>
            {{#each navigation as |select|}}
                <nav.item>
                    <nav.linkTo class="font" @type="primary" @route={{select.link}}>{{select.display}}</nav.linkTo>
                </nav.item>
            {{/each}}
        </navbar.nav>
    </navbar.content>
    </BsNavbar>
</div>


